# Stern Configuration Service Environment Variables

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Logging Configuration
LOG_LEVEL=info

# Database Configuration
# Options: sqlite, mongodb (or leave empty for auto-detection based on NODE_ENV)
DATABASE_TYPE=

# SQLite Configuration (Development/Test)
SQLITE_DATABASE_PATH=./data/stern-config.db

# MongoDB Configuration (Production)
MONGODB_URI=mongodb://localhost:27017/stern-configuration
MONGODB_DATABASE=stern-configuration

# MongoDB Connection Options
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_CONNECT_TIMEOUT_MS=10000

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=1000

# Security Configuration
# Uncomment and set in production
# JWT_SECRET=your-super-secret-jwt-key-here
# ENCRYPTION_KEY=your-32-character-encryption-key

# Performance Configuration
REQUEST_BODY_LIMIT=10mb
COMPRESSION_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_MS=5000

# Cleanup Configuration
CLEANUP_INTERVAL_HOURS=24
CLEANUP_RETENTION_DAYS=30